#!/bin/bash
set -euo pipefail

# Instala utilitÃ¡rios necessÃ¡rios para consolidaÃ§Ã£o e execuÃ§Ã£o do wrapper
apt-get update && apt-get install -y unzip zip openjdk-17-jre

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ VariÃ¡veis â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
BUILD_ID="${1:-$BITBUCKET_BUILD_NUMBER}"
PROJECT_VERACODE="${PROJECT_VERACODE:-$BITBUCKET_REPO_SLUG}"

echo "ğŸ Iniciando Veracode CI/CD para Node.js | Build ID: $BUILD_ID"
mkdir -p artifacts/$BUILD_ID

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Yarn Install â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo "ğŸ“¦ Instalando dependÃªncias..."
yarn install

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Veracode AutoPack â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo "ğŸ”§ Instalando Veracode CLI..."
curl -fsS https://tools.veracode.com/veracode-cli/install | sh

echo "ğŸ“¦ Rodando AutoPack..."
./veracode package \
  --source . \
  --type directory \
  --output artifacts/$BUILD_ID \
  --trust

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Consolidar analysisPack â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo "ğŸ—‚ï¸ Extraindo zips e consolidando..."
mkdir -p artifacts/$BUILD_ID/analysisPack
find artifacts/$BUILD_ID -name "*.zip" -exec unzip -o {} -d artifacts/$BUILD_ID/analysisPack \;

echo "ğŸ§± Criando analysisPack.zip..."
zip -r artifacts/$BUILD_ID/analysisPack.zip artifacts/$BUILD_ID/analysisPack

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Veracode Pipeline Scan â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
echo "ğŸ›¡ï¸ Baixando Veracode Pipeline Scanner..."
curl -O -L https://downloads.veracode.com/securityscan/pipeline-scan-LATEST.zip
unzip -o pipeline-scan-LATEST.zip

echo "ğŸ” Executando Pipeline Scan..."
java -jar pipeline-scan.jar \
  -vid "$APIID_VERACODE" \
  -vkey "$APIKEY_VERACODE" \
  -f "artifacts/$BUILD_ID/analysisPack.zip" \
  --issue_details true \
  -fs "Very High,High,Medium,Low,Very Low"

echo "âœ… Veracode Pipeline Scan finalizado com sucesso!"
